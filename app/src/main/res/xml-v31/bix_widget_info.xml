<?xml version="1.0" encoding="utf-8"?>
<appwidget-provider
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:minWidth="170dp"
    android:minHeight="96dp"
    android:updatePeriodMillis="86400000"
    android:description="@string/bix_widget_description"
    android:initialLayout="@layout/bix_widget"
    android:configure="bzh.edgar.bixbrother.BixWidgetConfigureActivity"
    android:resizeMode="horizontal|vertical"
    android:widgetCategory="home_screen"

    android:widgetFeatures="reconfigurable"

    android:targetCellWidth="3"
    android:targetCellHeight="2"
    android:minResizeWidth="170dp"
    android:minResizeHeight="96dp"
    android:maxResizeWidth="400dp"
    android:maxResizeHeight="1000dp"
    android:previewLayout="@layout/bix_widget_preview">
</appwidget-provider>
